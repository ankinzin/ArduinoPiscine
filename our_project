//Version with delay
int result = 0;
unsigned long previousMillis = 0;
const long interval = 100;  // Read input every 100 milliseconds

void setup () {
	pinMode(2, INPUT_PULLUP);
	pinMode(3, OUTPUT);
	pinMode(4, OUTPUT);
	pinMode(5, OUTPUT);
}

int checkState() {
	return (digitalRead(2));
}

int myDelay() {
	int x = 0;
	while (x < 1000)
	{
		x++;
		delay(50);
		if (digitalRead(2)) {
			return (0);
		}
	}
	return (1);
}

void loop() {
	int x = 0;
	unsigned long currentMillis = millis();

	while (!result) {
		digitalWrite(5, HIGH);
		digitalWrite(3, LOW);
		digitalWrite(4, LOW);
		if (digitalRead(2) == HIGHT) {
			result = 1;
		}
	}

	while(result) {
		digitalWrite(5, LOW);
		digitalWrite(3, HIGH);
		digitalWrite(4, HIGH);
		while(x < 1000) {
			delay (100);
			x += 100;
			if (digitalRead(2) == LOW) {
				result = 0;
			}
		}
		digitalWrite(3, LOW);
		digitalWrite(4, LOW);
		while(x < 2000) {
			delay (100);
			x += 100;
			if (digitalRead(2) == LOW) {
				result = 0;
			}
		}
	}
}
